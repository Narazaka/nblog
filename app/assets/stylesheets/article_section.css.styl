@import 'nib'
@import 'global'

section.article
	h1, h2, h3, h4, h5, h6
		color #111
		padding 0.1em
		margin 0.5em 0
	h1
		font-size xx-large
		font-weight bold
		border-bottom 1px solid #ccc
	h2
		font-size xx-large
		border-bottom 1px solid #eee
	h3
		font-size x-large
		font-weight bold
	h4
		font-size large
		font-weight bold
	h5
		font-size medium
		font-weight bold
	h6
		font-size small
		font-weight bold
	p, li, dd
		line-height 1.4em
		margin 0.5em 0
	blockquote
		padding 0.3em 0.5em
		border-left 4px solid #999
	ul, ol
		padding-left 2em
	ul
		list-style disc
		ul
			list-style circle
	ol
		list-style decimal
	dl
		dt
			font-weight bold
		dd
			padding-left 1em
	a
		a-normal()
	strong, b
		font-weight bold
	em, i
		text-decoration underline
	small
		font-size smaller
		color #999
	sub, sup
		position relative
		font-size 75%
		line-height 0
		vertical-align baseline
	sup
		top -0.5em
	sub
		bottom -0.25em
	img
		max-width 100%
		vertical-align middle
	dfn
		outline 1px solid #999
	abbr
		text-decoration none
		border-bottom 1px #999 dotted
		cursor help
	code, var, samp, kbd
		font-family monospace
	table
		border-collapse collapse
		border 1px solid #ccc
		th
			background #eee
		th, td
			line-height 1.4em
			padding 0.5em
			border 1px solid #ccc
